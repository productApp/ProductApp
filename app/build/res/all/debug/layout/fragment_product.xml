<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:context="group.appname.ProductActivity$PlaceholderFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_image_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/ic_product"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_image_2"
            android:layout_toRightOf="@id/product_image_1"
            android:layout_marginRight="16dip"
            android:background="@drawable/ic_product"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_image_3"
            android:layout_toRightOf="@id/product_image_2"
            android:background="@drawable/ic_product"
            />

        <View android:id="@+id/product_separator"
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/product_image_1"
            android:layout_marginBottom="16dip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_title"
            android:layout_below="@id/product_separator"
            android:layout_alignLeft="@id/product_image_1"
            android:layout_centerHorizontal="true"
            android:text="Product Title \n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/product_image_1"
            android:id="@+id/product_description"
            android:layout_below="@id/product_title"
            android:layout_centerHorizontal="true"
            android:text="Product Description \n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/product_image_1"
            android:id="@+id/seller_information"
            android:layout_below="@id/product_description"
            android:layout_centerHorizontal="true"
            android:text="Seller Information \n"
            />


    </RelativeLayout>
</ScrollView>
