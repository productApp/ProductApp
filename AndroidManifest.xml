<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.productApp.interfaces"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.productApp.interfaces.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.productApp.interfaces.SignUp"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.productApp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.productApp.MainActivity" />
        </activity>
        <activity
            android:name="com.productApp.interfaces.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.productApp.interfaces.Signin"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_signin"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
